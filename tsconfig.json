{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "module": "commonjs",
        "baseUrl": "./src",
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib",
        "./**/__tests__/*"
    ]
}